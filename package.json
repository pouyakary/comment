{
    "description":     "The easiest way to to decorate your codes with Kary Comments in Visual Studio Code.",
    "displayName":     "Comment V",
    "icon":            "icon.png",
    "main":            "./comment",
    "name":            "comment",
    "publisher":       "karyfoundation",
    "version":         "11.0.2",
    "repository": {
        "type":    "git",
        "url":     "https://github.com/pmkary/comment-vscode"
    },
    "engines": {
        "vscode":      "^0.10.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "title":       "Comment V",
            "properties": {
                "comment.legacy": {
                    "type":            "boolean",
                    "default":         true,
                    "description":     "If enabled it will render the legacy version of comments. This version has the ALL CAPS titles and the multi line and indentation system on some languages."
                },
				"comment.fancy": {
                    "type":            "boolean",
                    "default":         false,
                    "description":     "If set true, Renders a Decoration Ornament at the end of Line and Section comments."
                },
				"comment.ornament": {
                    "type":            "string",
                    "default":         "âœ£",
                    "description":     "The Ornament used at the end of Section and line comments."
                }
            }
        },
        "keybindings": [
            {
                "command":     "comment.makeFlagComment",
                "key":         "alt+shift+y",
                "when":        "editorTextFocus"
            },
            {
                "command":     "comment.makeSectionComment",
                "key":         "alt+y",
                "when":        "editorTextFocus"
            },
            {
                "command":     "comment.makeReverseSectionComment",
                "key":         "alt+m",
                "when":        "editorTextFocus"
            },
            {
                "command":     "comment.makeLineComment",
                "key":         "alt+l",
                "when":        "editorTextFocus"
            }
        ],
        "commands": [
            {
                "command":     "comment.makeLineComment",
                "title":       "Make a Kary Spacer Comment"
            },
            {
                "command":     "comment.makeSectionComment",
                "title":       "Make a Kary Header Comment"
            },
            {
                "command":     "comment.makeReverseSectionComment",
                "title":       "Make a Kary Reverse Header Comment"
            },
            {
                "command":     "comment.makeFlagComment",
                "title":       "Make a Kary Flag Comment"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command":     "comment.makeSectionComment"
                },
                {
                    "command":     "comment.makeLineComment"
                },
                {
                    "command":     "comment.makeReverseSectionComment"
                }
            ]
        }
    },
    "devDependencies": {
        "vscode":      "^1.1.37"
    },
    "__metadata": {
        "id":                      "89789d74-b90b-4cbf-b846-c903d9929362",
        "publisherDisplayName":    "Pouya Kary",
        "publisherId":             "00c37c0d-e370-4cc2-8ab3-3fa32a26514a"
    }
}